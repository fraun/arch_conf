# Any entry here is shown in the application menu
command term            urxvt
command internet        surf http://duckduckgo.com/lite
command "--------"      clear
command mumble          mumble
command "--------"      clear
command rage            "xinit rage -- :1 vt07"
command defrag          /opt/quake3/iodfengine.x86_64
command steam           steam

# do not manage these
ignore xclock

# behavior, look & feel
borderwidth             5 
color inactiveborder    "#181818"
color activeborder      "#917649"
color font              "#ebeac5"
color menubg            "#181818"
color selfont           "#ebeac5"
color menufg            "#917649"
color groupborder       "#526f33"
color ungroupborder     "#8b3e2f"

gap                     36 8 8 8
moveamount              2
snapdist                10

# Keybindings
# SIZE
bind 4-equal    vmaximize
bind 4S-equal   hmaximize
bind 4-x        maximize
bind 4M-h       resizeleft
bind 4M-j       resizedown
bind 4M-k       resizeup
bind 4M-l       resizeright
bind 4MS-h      bigresizeleft
bind 4MS-j      bigresizedown
bind 4MS-k      bigresizeup
bind 4MS-l      bigresizeright

# POSITION
bind 4-y        corner_tl
bind 4-u        corner_tr
bind 4-n        corner_bl
bind 4-comma    corner_br

bind 4-s        htile
bind 4-v        vtile
bind 4-h        moveleft
bind 4-j        movedown
bind 4-k        moveup
bind 4-l        moveright
bind 4S-h       bigmoveleft
bind 4S-j       bigmovedown
bind 4S-k       bigmoveup
bind 4S-l       bigmoveright

# CONTROL
bind 4-a        label
bind 4-Escape   delete
#bind 4-n        cycle
#bind 4-p        rcycle

# Group control
bind M-g            grouptoggle
bind M-l            cyclegroup
bind M-h            rcyclegroup
bind M-F1           group1
bind M-F2           group2
bind M-F3           group3
bind M-F4           group4
bind M-F5           group5
bind M-F6           group6
bind M-F7           group7
bind M-F8           group8
bind M-F9           group9
bind M-F10          nogroup
bind MS-F1          grouponly1
bind MS-F2          grouponly2
bind MS-F3          grouponly3
bind MS-F4          grouponly4
bind MS-F5          grouponly5
bind MS-F6          grouponly6
bind MS-F7          grouponly7
bind MS-F8          grouponly8
bind MS-F9          grouponly9

# Session management
bind CM-r       restart
bind CM-q       quit

bind CM4-s pm-suspend

bind F12 mpc next
bind F11 mpc prev
bind F10 mpc toggle
bind 4-F12 amixer set Master 2%+
bind 4-F11 amixer set Master 2%-
bind 4-F10 amixer set Master 100%-
# Applications
bind 4-exclam   exec
bind 4-colon    ssh
bind 4S-slash   search


#bind M-return unbind

# Mousebindings
